{
  "compileOnSave": true,

  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": [ "es6", "es2015", "dom" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "importHelpers":true,
    "outDir": "../../../lib.es2015",
    "declaration": false,
    "target": "es2015",

    "traceResolution": true
  },
  "include": [ "../../**/*" ],
  "exclude": [ "src/index.ts" ]
}