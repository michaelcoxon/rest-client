{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "outDir": ".out",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "target": "es5"
  },
  "include": [
    "**/*.spec.ts"
  ],
  "exclude": [
    "../src/index.ts",
    "../node_modules/**"
  ],
  "compileOnSave": true
}