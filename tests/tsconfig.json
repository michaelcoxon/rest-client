{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": [ "es6", "es2015", "dom" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "paths": {
      "../src/*": ["../lib.es2015"]
    },
    //"outDir": "../tests/tests.bundle.js",
    "target": "es2015"
  },
  "include": [ "../tests/**/*.spec.ts" ],
  "compileOnSave": true
}
