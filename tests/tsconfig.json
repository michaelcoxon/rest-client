{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": [ "es6", "es2015", "dom" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "target": "es5"
  },
  "include": [ "../tests/**/*.spec.ts" ],
  "exclude": [ "src/index.ts" ],
  "compileOnSave": true
}
